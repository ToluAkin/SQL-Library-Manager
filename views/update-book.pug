extends layout

block content
    h1 Update Book
    form(action=`/books/${book.id}` method="post" onsubmit="return confirm(Do you really want to update the book?)")
        p
            label(for="title") Title
                input(type="text" name="title" id="title")
        p
            label(for="author") Author
                input(type="text" name="author" id="author")
        p
            label(for="genre") Genre
                input(type="text" name="genre" id="genre")
        p
            label(for="year") Year
                input(type="text" name="year" id="year")
        p
            input(type='submit' value="Update Book")
    form(action=`/books/${book.id}/delete` method="post" onsubmit="return('Do you really want to delete this book')")
        p
            a.button(href='/books') Cancel
        p
            input(type='submit' value="Delete Book")
